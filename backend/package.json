{
  "name": "expense-tracker",
  "version": "4.16.5",
  "description": "Full-stack Expense Tracker Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd client && npm install && npm run build",
    "db:check": "node scripts/checkDatabaseSchema.js",
    "db:migrate": "node scripts/addFixedExpensesTable.js",
    "test": "cross-env NODE_ENV=test jest --runInBand"
  },
  "jest": {
    "testTimeout": 30000,
    "globalSetup": "<rootDir>/jest.globalSetup.js",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true
  },
  "dependencies": {
    "body-parser": "^2.2.2",
    "cors": "^2.8.6",
    "csv-parser": "^3.2.0",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.6",
    "tar": "^7.5.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.2.2"
  }
}
