    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "fast-check": "^4.3.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1"
  }
}
